<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingApp.Views.LoginPage" >

    <StackLayout>
        <Entry Placeholder="Name" x:Name="NameEntry" />
        <Entry Placeholder="SurName" x:Name="SurNameEntry" />
        <Entry Placeholder="Email" x:Name="EmailEntry" />
        <Entry Placeholder="Bio" x:Name="BioEntry" />
    <Button Text="Login" Clicked="OnLoginClicked" />
    </StackLayout>
</ContentPage>