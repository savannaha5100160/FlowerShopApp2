                <Button Text="Add to Cart" Clicked="OnAddToCartClicked" />
            </Frame>
            <Frame Padding="10" Margin="10" BackgroundColor="#F5F5F5">
                <Label Text="Rose" FontSize="16" HorizontalOptions="Center" />
                <Label Text="Red, fragrant flower" FontSize="12" HorizontalOptions="Center" />

                <Button Text="Add to Cart" Clicked="OnAddToCartClicked" />
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>


       
          

         
      
   
    
     