<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingApp.Views.ItemsPage">

    <ContentPage.Content>
        <StackLayout>
            <Frame Padding="10" Margin="10" BackgroundColor="#F5F5F5">
                <Label Text="Rose" FontSize="16" HorizontalOptions="Center" />
